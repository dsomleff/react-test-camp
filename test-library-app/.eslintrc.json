{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "react-app",
        "react-app/jest",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:testing-library/react",
        "plugin:jest-dom/recommended",
        "prettier"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"],
                "paths": ["src"]
            }
        }
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "testing-library",
        "jest-dom"
    ],
    "rules": {
        "react/no-multi-comp": "error",
        "react/prefer-stateless-function": "error",
        "react/jsx-pascal-case": "error",
        "react/jsx-boolean-value": "error",
        "react/no-string-refs": "error",
        "react/self-closing-comp": "error",
        "react/no-array-index-key": "error",
        "react/no-invalid-html-attribute": "error",
        "react/jsx-no-duplicate-props": "error",
        "testing-library/no-render-in-setup": ["error", {"allowTestingFrameworkSetupHook": "beforeEach"}],
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off"
//        "quotes": ["error", "single"],
//        "indent": "error"
        /* 
         * Conflicted Rules
         */
//        "prettier/prettier": "error", // commented based in import conflict in test files
//        "linebreak-style": ["error", "unix"],
//        "semi": ["error", "always"],
//        "react/jsx-closing-tag-location": "error",
//        "react/jsx-closing-bracket-location": "error",
//        "jsx-quotes": "error",
//        "react/jsx-props-no-multi-spaces": "error",
//        "react/jsx-tag-spacing": ["error", { "beforeSelfClosing":  "always" }],
//        "react/jsx-curly-spacing": "error",
//        "react/jsx-wrap-multilines": ["error", {
//            "declaration": "parens-new-line",
//            "assignment": "parens-new-line",
//            "return": "parens-new-line",
//            "arrow": "parens-new-line",
//            "condition": "parens-new-line",
//            "logical": "parens-new-line",
//            "prop": "parens-new-line"
//        }],
//        "react/jsx-curly-newline": ["error", "consistent"],
//        "react/jsx-equals-spacing": "error",
//        "react/jsx-first-prop-new-line": ["error", "multiline"],
//        "react/jsx-max-props-per-line": ["error", { "maximum":  3 }],
//        "react/jsx-newline": "error", // spaces between components
    }
}
